{% extends "layout.html" %}
{% load static %}

{% block content %}

<div class="container">
    <div class="row">
        {% for story in stories %}

        <div class="col">
            <div class="card dpg-album-card">
                <div class="card-content">
                    <a href={% url 'story' story.id %}>
                        <span class="card-title">{{ story.name }}</span>
                        {% if story.thumb %}
                            <img src="{{ story.thumb.url }}" class="responsive-img dpg-album-image"/>
                        {% endif %}
                    </a>
                </div>
            </div>
        </div>

        {% endfor %}

    </div>
</div>

{% endblock %}