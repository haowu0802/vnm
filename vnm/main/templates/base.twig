<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Visual Novel Maker</title>
  </head>

<style> 
    body {
        padding-top: 40px;
    }
    .wrapper {
        width: 100%;
    }
    #sidebar {
        height: 50vh;
        transition: all 0.3s;
        overflow: hidden;
        position: fixed;
    }
    #sidebar.active {
        margin-top: -50vh;
    }
    img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        display:block;
        margin: auto;
    }
    #content {
        padding-top: 50vh;
        height: 50vh;
    }
    #txt {
        position: fixed;
        height: 50vh;
        overflow-y: scroll;
    }
</style>


  <body>

    <nav class="navbar fixed-top navbar-light bg-light py-0">
        <a class="navbar-brand" href="{% url 'index' %}">Index</a>
        <button type="button" id="sidebarCollapse" class="btn btn-info">
            <i class="fas fa-align-left"></i>
        </button>
    </nav>

    {% block content %}
    {% endblock %}

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script type="text/javascript">

        // parse image set from context
        var images_string = JSON.parse(document.getElementById('images').textContent);
        var images_json = JSON.parse(images_string)

        // load a random image
        function loadImage(){
            var img_url = images_json[Math.floor(Math.random() * images_json.length)];
            $("#panel_image").attr("src", img_url);
        }

        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

            // load image every x seconds
            setInterval(loadImage, 5000);
            loadImage();
        });

    </script>

  </body>
</html>